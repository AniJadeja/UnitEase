<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.UnitEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.UnitEase" parent="Base.Theme.UnitEase">
        <item name="android:background">@color/black_700</item>
        <item name="android:textColor">@color/white_700</item>
    </style>


    <style name="Theme.UnitEase.TextStyle" parent="Theme.UnitEase">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.UnitEase.BaseButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/black_500</item>
        <item name="android:fontFamily">@font/ropa_sans</item>
        <item name="fontFamily">@font/ropa_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/extra_small_font_size</item>
        <item name="android:letterSpacing">@dimen/primary_letter_spacing</item>
        <item name="backgroundTint">@color/yellow_500</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/extra_small_padding</item>
        <item name="android:paddingEnd">@dimen/extra_small_padding</item>
        <item name="android:iconTint">@color/black_500</item>
        <item name="iconTint">@color/black_500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/small_icon_size</item>
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="cornerRadius">@dimen/small_corner_radius</item>
        <item name="rippleColor">@color/black_100</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="Theme.UnitEase.PrimaryText" parent="Theme.UnitEase.TextStyle">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="fontFamily">@font/arial</item>
    </style>


    <style name="Theme.UnitEase.SecondaryText" parent="Theme.UnitEase.TextStyle">
        <item name="android:textSize">@dimen/extra_small_font_size</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>



    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@color/black_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">4000</item>
        <item name="postSplashScreenTheme">@style/Theme.UnitEase</item>
        <item name="splashScreenIconSize">100dp</item>
    </style>

    <dimen name="small_icon_size">10dp</dimen>
</resources>